<UserControl x:Class="Area51.SoftwareModeler.Views.ClassUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Area51.SoftwareModeler.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBox HorizontalContentAlignment="Center" FontSize="20" Text="{Binding Name}"></TextBox>
        <DataGrid x:Name="shapesControl" Width="300" ItemsSource="{Binding Name}" AutoGenerateColumns="True">
        </DataGrid>
        <TextBox HorizontalContentAlignment="Center" FontSize="20" Text="{Binding Visibility}"></TextBox>
    </StackPanel>
</UserControl>
