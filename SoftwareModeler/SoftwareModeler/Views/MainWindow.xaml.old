<Window x:Class="Area51.SoftwareModeler.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
        xmlns:ViewModel="clr-namespace:Area51.SoftwareModeler.ViewModels"
        xmlns:Views="clr-namespace:Area51.SoftwareModeler.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Window.DataContext>
        <ViewModel:MainViewModel />
    </Window.DataContext>

    <StackPanel Orientation="Horizontal">
        <Views:ToolboxUserControl/>
        <Grid IsHitTestVisible="True" Background="White" MouseDown="clikc">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <cmd:EventToCommand Command="{Binding Path=MouseClickCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Grid>
    </StackPanel>
   
</Window>
