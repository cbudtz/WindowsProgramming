    <ScrollViewer Name="MainViewScroll" Style="{StaticResource ScrollBarStyle}">
        
        <Canvas Name="MainCanvas" IsHitTestVisible="True" Background="Transparent">
            <!--<Grid Background="Transparent" Name="MainGrid">-->
            <ItemsControl ItemsSource="{Binding Connections}"/>
            <ItemsControl ItemsSource="{Binding Comments}"/>
            <ItemsControl Name="ItemsClass" ItemsSource="{Binding Classes}"/>
        
            <!--</Grid>--><!--</Grid>-->
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseUp">
                    <cmd:EventToCommand Command="{Binding Path=MouseClickCommand}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Canvas>
        
    </ScrollViewer>
</UserControl>
